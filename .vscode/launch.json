{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Debug Next.js Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": ["dev"],
            "env": {
                "NODE_OPTIONS": "--inspect"
            },
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "üîó Attach to Next.js Server",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ]
        },
        {
            "name": "üåê Debug Chrome Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*",
                "webpack:///src/*": "${webRoot}/src/*",
                "webpack:///*": "*"
            },
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-user-data"
        },
        {
            "name": "üîß Debug API Routes Only",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": ["dev"],
            "env": {
                "NODE_OPTIONS": "--inspect=9230"
            },
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**",
                "${workspaceFolder}/src/app/**/page.tsx",
                "${workspaceFolder}/src/app/**/layout.tsx",
                "${workspaceFolder}/src/app/components/**"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "üì§ Debug Upload Functionality",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": ["dev"],
            "env": {
                "NODE_OPTIONS": "--inspect=9231",
                "DEBUG": "suno-api:upload"
            },
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "üß™ Debug with Test Request",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/debug-test.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "üèóÔ∏è Debug Production Build",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": ["start"],
            "env": {
                "NODE_OPTIONS": "--inspect",
                "NODE_ENV": "production"
            },
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "üèóÔ∏è Build Production"
        }
    ],
    "compounds": [
        {
            "name": "üî• Full Debug Session",
            "configurations": [
                "üöÄ Debug Next.js Dev Server",
                "üåê Debug Chrome Frontend"
            ],
            "preLaunchTask": "üì¶ Install Dependencies",
            "stopAll": true
        },
        {
            "name": "üéØ API Development Mode",
            "configurations": [
                "üîß Debug API Routes Only"
            ],
            "preLaunchTask": "üè• Test API Health"
        }
    ]
} 